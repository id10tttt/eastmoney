.card {
  position: relative;
  margin: 32rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
  border: 3rpx solid rgba(34,33,34,0.90);
}

.card--active {
  border-color: rgba(34,33,34,0.90);
}

.card--active::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  border: 14px solid rgba(255,204,86,1);
  border-bottom-color: transparent;
  border-right-color: transparent;
}

.card__icon {
  color: #fff;
  position: absolute;
  left: 1.5px;
  top: 1.5px;
  z-index: 1;
}

button{
  width: 95% !important;
  margin-top: 30rpx;
  background: rgba(34,33,34,0.90) !important;
  margin-bottom: 30rpx;
  color: #e1c7ae !important;
}
