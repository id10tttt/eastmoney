<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_finance_stock_compare_analysis_form" model="ir.ui.view">
            <field name="name">stock.compare.analysis form</field>
            <field name="model">stock.compare.analysis</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="get_mine_value" string="获取值" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="value_type"/>
                                <field name="uuid"/>
                            </group>
                            <group>
                                <field name="type_id"/>
                                <field name="usage"/>
                            </group>
                        </group>
                        <group>
                            <field name="benchmark"/>
                        </group>
                        <group string="取值">
                            <group>
                                <field name="value_model_id" attrs="{'required': [('value_type', '!=', 'vs')]}"/>
                            </group>
                            <group>
                                <field name="value_field_name" domain="[('model_id', '=', value_model_id)]"
                                       attrs="{'required': [('value_type', '!=', 'vs')]}"/>
                            </group>
                        </group>
                        <group string="比较">
                            <group>
                                <field name="left_model_id" attrs="{'required': [('value_type', '=', 'vs')]}"/>
                                <field name="left_field_name" domain="[('model_id', '=', left_model_id)]"
                                       attrs="{'required': [('value_type', '=', 'vs')]}"/>
                                <field name="left_filter_field" domain="[('model_id', '=', left_model_id)]"
                                       attrs="{'required': [('value_type', '=', 'vs')]}"/>
                                <field name="left_domain" attrs="{'required': [('value_type', '=', 'vs')]}"/>
                            </group>
                            <group>
                                <field name="right_model_id" attrs="{'required': [('value_type', '=', 'vs')]}"/>
                                <field name="right_field_name" domain="[('model_id', '=', right_model_id)]"
                                       attrs="{'required': [('value_type', '=', 'vs')]}"/>
                                <field name="right_filter_field" domain="[('model_id', '=', right_model_id)]"
                                       attrs="{'required': [('value_type', '=', 'vs')]}"/>
                                <field name="right_domain" attrs="{'required': [('value_type', '=', 'vs')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_finance_stock_compare_analysis_tree" model="ir.ui.view">
            <field name="name">stock.compare.analysis tree</field>
            <field name="model">stock.compare.analysis</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="uuid"/>
                    <field name="benchmark"/>
                    <field name="left_model_id"/>
                    <field name="left_field_name"/>
                    <field name="left_filter_field"/>
                    <field name="right_model_id"/>
                    <field name="right_field_name"/>
                    <field name="right_filter_field"/>
                    <field name="usage"/>
                    <field name="type_id"/>
                </tree>
            </field>
        </record>
        <record id="action_finance_stock_compare_analysis" model="ir.actions.act_window">
            <field name="name">雷区定义</field>
            <field name="res_model">stock.compare.analysis</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_finance_stock_compare_analysis"
                  name="雷区定义"
                  action="action_finance_stock_compare_analysis"
                  parent="menu_finance_stock_mine_sweep"
                  sequence="10"/>
    </data>
</odoo>
