<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wxapp_config_view_tree_view" model="ir.ui.view">
            <field name="name">wx.config.view_tree</field>
            <field name="model">wx.config</field>
            <field name="type">tree</field>
            <field name="priority">999</field>
            <field name="arch" type="xml">
                <tree string="扫雷设置">
                    <field name="mall_name"/>
                    <field name="sub_domain"/>
                    <field name="team_id"/>
                    <field name="app_id"/>
                </tree>
            </field>
        </record>
        <record id="wxapp_config_view_form_view" model="ir.ui.view">
            <field name="name">wxapp.config.view_form</field>
            <field name="model">wx.config</field>
            <field name="type">form</field>
            <field name="priority">999</field>
            <field name="arch" type="xml">
                <form string="扫雷设置" create="0" delete="0" duplicate="0">
                    <header>
                        <button name="clean_all_token_window" type="object" string="清空Token缓存"
                                groups="base.group_no_one"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="mall_name"/>
                                <field name="sub_domain"/>
                            </group>
                            <group>
                                <field name="app_id"/>
                                <field name="secret" password="True"/>
                            </group>
                        </group>
                        <group>
                            <group name="miniapp" string="小程序相关">
                                <field name="msgtpl_order_created"/>
                                <field name="msgtpl_order_paid"/>
                                <field name="msgtpl_order_delivery"/>
                                <field name="msgtpl_order_closed"/>
                                <field name="msgtpl_order_confirmed"/>
                            </group>
                            <group string="基础配置">
                                <field name="team_id"/>
                                <field name="user_id"/>
                                <field name="gmt_diff"/>
                            </group>
                        </group>
                        <group>
                            <group string="微信支付配置">
                                <field name="wechat_pay_id"/>
                                <field name="wechat_pay_secret"/>
                            </group>
                            <group string="物流/配送">
                                <field name="kdniao_app_id"/>
                                <field name="kdniao_app_key"/>
                                <field name="allow_self_collection"/>
                            </group>
                        </group>

                        <group string="其他配置">
                            <group>
                                <field name="recharge_open"/>
                            </group>
                            <group>
                                <field name="enable_no_service_period"/>
                                <div attrs="{'invisible': [('enable_no_service_period', '!=', True)]}"
                                     style="margin-left:100px">
                                    <span>禁用下单开始时间</span>
                                    <field name="no_service_start_hour" class="oe_inline"/>
                                    <span>点,</span>
                                    <field name="no_service_start_minute" class="oe_inline"/>
                                    <span>分，持续</span>
                                    <field name="no_service_long" class="oe_inline"/>
                                    <span>分钟</span>
                                </div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="wxapp_config_action" model="ir.actions.act_window">
            <field name="name">扫雷设置</field>
            <field name="res_model">wx.config</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="wxapp_config_action" id="wxapp_config_menuitem" name="设置"
                  parent="mine_sweep_menu_root" sequence="99"/>

    </data>
</odoo>
