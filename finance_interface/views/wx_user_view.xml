<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wxapp_user_view_tree_view" model="ir.ui.view">
            <field name="name">wx.user.view_tree</field>
            <field name="model">wx.user</field>
            <field name="type">tree</field>
            <field name="priority">999</field>
            <field name="arch" type="xml">
                <tree string="微信客户" create="0" edit="0" delete="0">

                    <field name="nickname"/>
                    <field name="avatar"/>
                    <field name="mobile"/>

                    <field name="province"/>
                    <field name="city"/>
                    <field name="gender"/>

                    <field name="create_date" string="注册时间"/>
                    <field name="last_login"/>
                    <field name="status"/>

                    <field name="register_type"/>
                </tree>
            </field>
        </record>
        <record id="wxapp_user_view_form_view" model="ir.ui.view">
            <field name="name">wx.user.view_form</field>
            <field name="model">wx.user</field>
            <field name="type">form</field>
            <field name="priority">999</field>
            <field name="arch" type="xml">
                <form string="微信客户" create="0" edit="0" delete="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="nickname" readonly="1"/>
                                <field name="avatar" readonly="1"/>
                                <field name="mobile" readonly="1"/>

                                <field name="country" readonly="1"/>
                                <field name="province" readonly="1"/>
                                <field name="city" readonly="1"/>
                                <field name="language" readonly="1"/>
                                <field name="gender" readonly="1"/>
                            </group>
                            <group>
                                <field name="open_id" readonly="1"/>
                                <field name="union_id" readonly="1"/>
                                <field name="create_date" string="注册时间" readonly="1"/>
                                <field name="last_login" readonly="1"/>
                                <field name="status" readonly="1"/>

                                <field name="register_type" readonly="1"/>
                                <field name="register_ip" readonly="1"/>
                                <field name="ip" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="address_ids"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="wxapp_user_filter" model="ir.ui.view">
            <field name="name">wx_user_filter</field>
            <field name="model">wx.user</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="查找">
                    <field name="nickname" string="昵称"/>
                </search>
            </field>
        </record>
        <record id="wxapp_user_action" model="ir.actions.act_window">
            <field name="name">微信客户</field>
            <field name="res_model">wx.user</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="wxapp_user_action" id="wx_user_menuitem" name="微信客户"
                  parent="mine_sweep_menu_root" sequence="1"/>

    </data>
</odoo>
