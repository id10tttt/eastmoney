/**index.wxss**/


.index {
  background: #F3F1F3;
  padding-bottom: 20rpx;
}
.index-bot{
  width: 220rpx;
  margin: 80% auto;
  display: flex;
}
.index-bot-txt{
  width: 78rpx;
  height: 40rpx;
  font-family: 'Titillium Web';
  font-style: normal;
  font-weight: 300;
  font-size: 26rpx;
  line-height: 48rpx;
  margin-left:10rpx;
}
.placeholder {
  margin-left: 20rpx;
} 
.index-bot-sign{
  width: 24rpx;
  height: 14rpx;
  margin-left:20rpx ;
}
.index-bot-img image{
  width: 34rpx;
  height: 40rpx;
  
}
.index-top {
  width: auto;
  height: 255rpx;
  background: #e1c8ae;
  margin: 0 auto;
  display: flex;
  position: relative;
}
.index-top-hello{
  width: 72rpx;
  height: 52rpx;
  font-size: 32rpx;
  font-family: Jost, Jost-Regular;
  font-weight: 400;
  color: #333333;
  line-height: 52rpx;
  position: absolute;
  top:91rpx;
  left:64rpx;
}
.index-top-name{
  width: 100%;
  height: 52rpx;
  font-size: 52rpx;
  font-family: Jost, Jost-Bold;
  font-weight: 700;
  text-align: left;
  color: #333333;
  line-height: 52rpx;
  letter-spacing: 0.16rpx;
  position: absolute;
  left: 64rpx;
  top:147rpx;
}
.index-top-sign{
  width: 16rpx;
  height: 28rpx;
  position: absolute;
  left:254rpx;
  top:150rpx;
}
.index-top-my{
  width: 238rpx;
  height: 96rpx;
  background: rgba(34,33,34,0.90);
  border: 4rpx dashed rgba(225,199,174,0.00);
  border-radius: 24rpx;
  text-align: CENTER;
  line-height: 96rpx;
  color: #e1c7ae;
  position: absolute;
  top:97rpx;
  left:472rpx;
}
.search_stock {
  background-color: #fff;
  padding: 16rpx 32rpx;
}

.space {
  height: 32rpx;
}
.block {
  margin: 10rpx 30rpx;
}

.block .margin-8 {
  vertical-align: top;
}

.block .margin-8:not(:last-child) {
  margin-right: 5rpx;
}
.index-search-inp{
  width: 400rpx !important;
  height: 36rpx !important;
  background: #fbfcfe;
  border: 3rpx solid #353230;
  border-radius: 20rpx;
  box-shadow: 0px 8rpx 30rpx 0rpx rgba(225,229,240,0.30); 
  position: absolute;
  margin-left: 32rpx;
  margin-right: 260rpx;
}
.index-search{
  width: auto;
  height: 60rpx;
  margin: 48rpx auto;
  display: flex;
  position: relative;
}

.index-search-btn{
  width: 198rpx;
  height: 10rpx;
  background: rgba(34,33,34,0.90);
  border: 2rpx dashed rgba(225,199,174,0.00);
  border-radius: 24rpx;
  text-align: CENTER;
  line-height: 96rpx;
  color: #e1c7ae;
  font-size: 32rpx;
  font-family: Jost, Jost-Regular;
  font-weight: 400;
  position: absolute;
  margin-top: -100rpx;
  left: 520rpx
}

.block_info {
  background: white;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}

.block--top,
.block--bottom {
  width: 100vw;
  height: 240px;
  margin: 5rpx 5rpx;
  padding: 5rpx 5rpx;
  align-items: center;
  font-size: 32rpx;
  font-family: Jost, Jost-Regular;
  font-weight: 400;
}

.clear_input{
  align-items: center;
  justify-content: center;
  right: 3px;
  position: absolute;
  bottom: 5px;
  z-index: 5;
}

.show_clear{
  display: flex;
}
 
.hide_clear{
  display: none;
}

.scrollview {
  background: white;
  width: 470rpx;
  height: 300rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
  margin-left: 32rpx;
  white-space: nowrap;
  position: fixed;
}

.itemview{
  height: 15rpx;
  margin-top: -10rpx;
  white-space: nowrap;
}